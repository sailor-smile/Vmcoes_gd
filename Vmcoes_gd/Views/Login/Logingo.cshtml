@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>登录</title>

    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="~/framework/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/framework/font-awesome/4.5.0/css/font-awesome.min.css" />

    <!-- text fonts -->
    <link rel="stylesheet" href="~/framework/css/fonts.googleapis.com.css" />

    <!-- framework styles -->
    <link rel="stylesheet" href="~/framework/css/framework.min.css" />

    <!--[if lte IE 9]>'login-layout
        <link rel="stylesheet" href="~/framework/css/framework-part2.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="~/framework/css/framework-rtl.min.css" />

    <!--[if lte IE 9]>
      <link rel="stylesheet" href="~/framework/css/framework-ie.min.css" />
    <![endif]-->
    <!-- HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries -->
    <!--[if lte IE 8]>
    <script src="~/framework/js/html5shiv.min.js"></script>
    <script src="~/framework/js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="login-layout  blur-login">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container" style="margin-top:120px;">
                        <div class="center">
                            <h2>
                                <span class="white" id="id-text2" style="font-size:25px;">
                                    普陀区出土工地视频监控检查系统
                                </span>
                            </h2>
                        </div>
                        <div class="space-6"></div>
                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="ace-icon fa fa-coffee green"></i>
                                            请登录
                                        </h4>
                                        <div class="space-6"></div>
                                        <form>
                                            <div id="errorInfo" style="color:orangered;"></div>
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input type="text" class="form-control lgn" id="act" placeholder="请输入账户名" />
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input type="password" class="form-control lgn" id="pwd" placeholder="请输入密码" />
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                </label>

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    <button type="button" id="btnLogin" class="width-35 pull-right btn btn-sm btn-primary">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        <span class="bigger-110">登录</span>
                                                    </button>
                                                </div>

                                                <div class="space-4"></div>
                                            </fieldset>
                                        </form>

                                        <div class="space-6"></div>
                                    </div><!-- /.widget-main -->
                                </div><!-- /.widget-body -->
                            </div><!-- /.login-box -->
                        </div><!-- /.position-relative -->

                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script src="~/framework/js/jquery-2.1.4.min.js"></script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script src="~/framework/js/jquery-1.11.3.min.js"></script>
    <![endif]-->
    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write("<script src='~/framework/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>
    <script src="~/js/plugins/jquery.tmpl.min.js"></script>
    <!-- inline scripts related to this page -->
    <script src="~/js/pageScripts/Nurse/User/login.js"></script>
</body>
</html>


